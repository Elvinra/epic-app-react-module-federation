{
  "exclude": [
    "node_modules",
    "./packages/**/node_modules"
  ],
  "compilerOptions": {
    "outDir": "./dist/",
    "baseUrl": ".",
    "module": "es2020",
    "moduleResolution": "node",
    "target": "es6",
    "jsx": "react",
    "strict": true,
    "noImplicitAny": false,
    "removeComments": true,
    "sourceMap": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "dashboard/DashboardRoutes": [
        "./packages/dashboard/src/DashboardRoutes",
      ]
    }
  }
}